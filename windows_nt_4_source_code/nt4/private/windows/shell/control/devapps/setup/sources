!IFNDEF MSC_WARNING_LEVEL
MSC_WARNING_LEVEL=/W3
!ENDIF
MSC_WARNING_LEVEL=$(MSC_WARNING_LEVEL) /WX

SOURCES= option.cpp \
         osetup.cpp \
         oplist.cpp \
         setup.cxx \
         statinfo.cxx \
         uni.cxx


