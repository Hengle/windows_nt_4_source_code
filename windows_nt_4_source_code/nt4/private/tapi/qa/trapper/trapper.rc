    {
        MENUITEM "New &Test Thread",            IDM_NEWTESTTHREAD
        MENUITEM SEPARATOR
        MENUITEM "&Memory status...",           IDM_MEMORYSTATUS
        MENUITEM SEPARATOR
        MENUITEM "&Load Tapi32.dll",            IDM_LOADTAPI
        MENUITEM "&Unload Tapi32.dll",          IDM_UNLOADTAPI
