!INCLUDE $(NTMAKEENV)\makefile.plt

MAKE=nmake /f make16.mak

all:
!if "$(PROCESSOR_ARCHITECTURE)" == "x86"
    @echo Build_Status Build 16 bit server edatas16 under NTVDM.
    cd server
    $(MAKE)
    @echo Build_Status Build 16 bit client idatau16 under NTVDM.
    cd ..\client
    $(MAKE)
    cd ..
!endif
!IF "$(BUILDMSG)" != ""
    @ech ; $(BUILDMSG) ;
!ENDIF

cleanup:
!if "$(PROCESSOR_ARCHITECTURE)" == "x86"
    cd server
    $(MAKE) clean
    cd ..\client
    $(MAKE) clean
    cd ..
!endif

clean: cleanup all
